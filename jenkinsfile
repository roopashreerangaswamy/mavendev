pipeline {
    agent any

    tools {
        maven 'maven-3.9.9'   // ğŸ” Match exactly as shown in Jenkins
        jdk 'jdk-21'          // ğŸ” Match this too
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/roopashreerangaswamy/mavendev.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }
}
