pipeline {
    agent any

    tools {
        maven 'maven-3.9.9' // Must match the name configured in Jenkins -> Global Tool Configuration
        jdk 'jdk-21'        // Must match the name configured in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/roopashreerangaswamy/mavendev.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }
    }
}
